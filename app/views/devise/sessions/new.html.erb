<div class="row background">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col s5 offset-s4'}) do |f| %>
      <div class="col s12 z-depth-4 ">
        <div class="row">
          <div class="input-field col s12 center">
            <img src="http://demo.geekslabs.com/materialize/v2.2/layout02/images/login-logo.png" alt="" class="circle responsive-img valign profile-image-login center">
            <p class="center login-form-text">Trello</p>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">perm_identity</i>
            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: 'validate' %>
            <label for="email" data-error="wrong">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
            <%= f.label :password %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="row">
          <div class="input-field col s12" >
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
        <% end %>

        <div class="row">
          <div class="input-field col s12">
            <button class="btn waves-effect waves-light col s12" type="submit" name="commit" value="Create Task"> Log in
            <i class="material-icons right">send</i>
          </button>
          </div>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    <%end%>
  </div>
</div>