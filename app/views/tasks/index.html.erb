<%= render partial: "navbar" %>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a class="btn-floating btn-large waves-effect waves-light red" href=<%= "#{new_task_path}" %>>
    <i class="material-icons">add</i>
  </a>
</div>

<div class="col s6">
  <ul class="collection with-header">
    <li class="collection-header header center"><h4> TO DO</h4></li>
    <% @due_tasks.each do |task| %>
      <li class="collection-item avatar active">
        <i class="material-icons circle red icon">report_problem</i>
        <span class="task-title"><%= task.title%> </span><br>
        <div class="chip">
          <%= image_tag("yuna.jpg")%>
          <span class="capitalize"><%= task.user.username %></span>
        </div>
        <div class="chip"
          <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
        </div>

        <div class="secondary-content right">
          <a href= <%= task_path(task) %> id='show' data-remote="true" >
            <i class="material-icons">zoom_in</i>
          </a>
          <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
          <%= link_to task_path(task), method: :delete do %>
            <i class="material-icons">delete</i>
          <% end %>
        </div>
      </li>
    <% end %>

    <% @tasks.each do |task| %>
      <li class="collection-item">
        <div>
          <span class="task-title"><%= task.title%> </span><br>
          <div class="chip">
            <%= image_tag("yuna.jpg")%>
            <span class="capitalize"><%= task.user.username %></span>
          </div>
          <div class="chip"
            <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
          </div>

          <div class="secondary-content">
            <a href= <%= task_path(task) %> ><i class="material-icons">zoom_in</i></a>
            <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
            <%= link_to task_path(task), method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </div>
        </div>
      </li>
      <% end %>
  </ul>
</div>

<div class="col s6">
  <ul class="collection with-header">
    <li class="collection-header header center"><h4> DONE</h4></li>
    <% @finished_tasks.each do |task| %>
      <li class="collection-item">
        <div>
          <span class="task-title"><%= task.title%> </span><br>
          <div class="chip">
            <%= image_tag("yuna.jpg")%>
            <span class="capitalize"><%= task.user.username %></span>
          </div>
          <div class="chip"
            <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
          </div>

          <div class="secondary-content">
            <a href= <%= task_path(task) %> ><i class="material-icons">zoom_in</i></a>
            <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
            <%= link_to task_path(task), method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>



