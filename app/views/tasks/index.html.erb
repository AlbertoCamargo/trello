<%= render partial: "navbar" %>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a class="btn-floating btn-large waves-effect waves-light red" href=<%= "#{new_task_path}" %>>
    <i class="material-icons">add</i>
  </a>
</div>

<div class="col s6">
  <ul class="collection with-header">
    <li class="collection-header header center"><h4> TO DO</h4></li>
    <% @due_tasks.each do |task| %>
      <li class="collection-item avatar active">
        <i class="material-icons circle red icon">report_problem</i>
        <span class="task-title"><%= task.title%> </span><br>
        <div class="chip">
          <%= image_tag("yuna.jpg")%>
          <span class="capitalize"><%= task.user.username %></span>
        </div>
        <div class="chip"
          <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
        </div>

        <div class="secondary-content right">
          <a href= <%= task_path(task) %> data-remote="true" >
            <i class="material-icons">zoom_in</i>
          </a>
          <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
          <%= link_to task_path(task), method: :delete do %>
            <i class="material-icons">delete</i>
          <% end %>
        </div>
      </li>
    <% end %>

    <% @tasks.each do |task| %>
      <li class="collection-item">
        <div>
          <span class="task-title"><%= task.title%> </span><br>
          <div class="chip">
            <%= image_tag("yuna.jpg")%>
            <span class="capitalize"><%= task.user.username %></span>
          </div>
          <div class="chip"
            <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
          </div>

          <div class="secondary-content">
            <a href= <%= task_path(task) %> data-remote="true" >
              <i class="material-icons">zoom_in</i>
            </a>
            <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
            <%= link_to task_path(task), method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </div>
        </div>
      </li>
      <% end %>
  </ul>
</div>

<div class="col s6">
  <ul class="collection with-header">
    <li class="collection-header header center"><h4> DONE</h4></li>
    <% @finished_tasks.each do |task| %>
      <li class="collection-item">
        <div>
          <span class="task-title"><%= task.title%> </span><br>
          <div class="chip">
            <%= image_tag("yuna.jpg")%>
            <span class="capitalize"><%= task.user.username %></span>
          </div>
          <div class="chip"
            <br><i class="material-icons">today</i> <%= task.finish_date %> </span>
          </div>

          <div class="secondary-content">
            <a href= <%= task_path(task) %> data-remote="true" >
              <i class="material-icons">zoom_in</i>
            </a>
            <a href= <%= edit_task_path(task) %> ><i class="material-icons">assignment</i></a>
            <%= link_to task_path(task), method: :delete do %>
              <i class="material-icons">delete</i>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>



<div id="modal1" class="modal bottom-sheet">
  <div class="modal-content">
    <div class="col s12 m8 offset-m2 l6 offset-l3">
         <div class="card small">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag "office.jpg", class: 'activator' %>
          </div>

          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4" id="title"><i class="material-icons right">more_vert</i> <br>
              <div class="chip" id="author">
                <%= image_tag "yuna.jpg", class: 'activator' %>
              </div>
            </span>
          </div>

          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4" id="title"><i class="material-icons right">close</i></span>
            <p id="description"></p>
            <div class="chip" id="start-date">
              <i class="material-icons" >today</i>
            </div>
            <div class="chip"  id="end-date">
              <i class="material-icons">done_all</i>
            </div>
            <div class="chip" id="duration">
              <i class="material-icons">query_builder</i>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>